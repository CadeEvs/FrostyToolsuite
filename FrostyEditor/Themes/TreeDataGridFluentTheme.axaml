<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FrostyEditor.Themes.TreeDataGridFluentTheme">

  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <MergeResourceInclude Source="/Themes/Controls/TreeDataGridControl.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Styles.Resources>

  <Style Selector=":is(TreeDataGridCell)">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="MinHeight" Value="25"/>
  </Style>

  <Style Selector=":is(TreeDataGridCell):selected">
    <Setter Property="Background" Value="{DynamicResource TreeDataGridSelectedCellBackgroundBrush}"/>
  </Style>

</Styles>
