<shader profile="*">
	<permutations>
		<permutation>
			<vertexshader>
				<vertexlayout>
					<layoutelement usage="Pos" format="Float3"/>
					<layoutelement usage="Normal" format="Float3"/>
					<layoutelement usage="TexCoord0" format="Float2"/>
				</vertexlayout>
			</vertexshader>
			<pixelshader>
				<parameters>
					<parameter name="Tint" type="Float4" defaultValue="1,1,1,1"/>
				</parameters>
				<textures>
					<texture name="Sprite" type="2d" defaultValue="Resources/Textures/DefaultSprite.dds"/>
				</textures>
				<samplers>
					<sampler/>
				</samplers>
			</pixelshader>
		</permutation>
	</permutations>
</shader>