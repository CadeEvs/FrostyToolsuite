                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                <TextBlock x:Name="versionTextBlock" Text="Version" Foreground="#C0C0C0" Margin="0" FontFamily="Segoe UI" FontSize="12" />
