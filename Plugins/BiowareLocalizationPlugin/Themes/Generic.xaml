<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bwctr="clr-namespace:BiowareLocalizationPlugin.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FrostyControls;component/Themes/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- BiowareLocalizedStringEditor -->
    <Style TargetType="{x:Type bwctr:BiowareLocalizedStringEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type bwctr:BiowareLocalizedStringEditor}">
                    <Grid Background="{StaticResource ControlBackground}">
                        <Grid Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="26"/>
                            </Grid.RowDefinitions>
                            
                            <Border Margin="1">
                                <DockPanel>
                                    <Border Background="{StaticResource ControlBackground}" CornerRadius="2">
                                        <Grid Background="{StaticResource ListBackground}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Content="Search Text with ID:" Margin="1,-2,4,0"/>
                                            <TextBox Grid.Column="1" Name="PART_Searchfield" Text="" FontFamily="Global User Interface" BorderThickness="1" Margin="1,2,4,1"/>
                                            <Button Grid.Column="2" Name="PART_SearchButton" ClickMode="Press" Margin="1,0,4,1" Padding="10,0,10,0">Search</Button>
                                            <CheckBox Grid.Column="3" Name="PART_UpdateTextIdFieldCB" IsThreeState="False" Margin="6,2,2,1">
                                                <Label Content="Update text ID field" Margin="0,-5,0,0"/>
                                            </CheckBox>
                                            <Button Grid.Column="4" Name="PART_SearchTextButton" ClickMode="Press" Margin="8,0,4,2" Padding="10,0,10,0">Search for Text</Button>
                                            <CheckBox Grid.Column="5" Name="PART_ModifiedOnlyCB" IsThreeState="False" Margin="6,2,2,1">
                                                <Label Content="Show only modified" Margin="0,-5,0,0"/>
                                            </CheckBox>
                                            <Button Grid.Column="7" Name="PART_RefreshButton" ClickMode="Press" Margin="1,2,8,1" Padding="10,0,10,0">Refresh</Button>
                                            <ComboBox Grid.Column="8" Name="PART_LanguageSelector" BorderThickness="1" Width="250" Height="Auto"/>
                                        </Grid>
                                    </Border>
                                </DockPanel>
                            </Border>

                            <Grid Grid.Row="1" Background="{StaticResource ListBackground}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="0.5*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <ListBox x:Name="PART_StringIdList" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                </Grid>
                                <Border Grid.Column="1" Background="{StaticResource ControlBackground}"/>
                                <Grid Grid.Column="2" Background="{StaticResource WindowBackground}">
                                    <TextBox x:Name="PART_LocalizedString" TextWrapping="Wrap" Padding="4" Text="" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2" Background="{StaticResource ListBackground}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Name="PART_AddEdit" ClickMode="Press" Margin="1,1,2,1" Padding="10,0,10,0">Add / Edit</Button>
                                <Button Grid.Column="1" Name="PART_Remove" ClickMode="Press" Margin="1,1,2,1" Padding="10,0,10,0">Remove / Revert</Button>
                                <Button Grid.Column="2" Name="PART_ShowTextInfo" ClickMode="Press" Margin="1,1,2,1" Padding="10,0,10,0">Show Text Info</Button>
                                <Button Grid.Column="4" Name="PART_Export" ClickMode="Press" Margin="1,1,2,1" Padding="10,0,10,0">Export</Button>
                                <Button Grid.Column="5" Name="PART_Import" ClickMode="Press" Margin="1,1,2,1" Padding="10,0,10,0">Import</Button>
                            </Grid>
                            
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>